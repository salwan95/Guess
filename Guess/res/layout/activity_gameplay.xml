<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    
    tools:context="com.example.guess.Gameplay" >
    
    <ImageView
        android:id="@+id/imageViewProfilePic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/abc_ab_bottom_solid_dark_holo" />
    
    <!-- <com.facebook.widget.ProfilePictureView
        android:id="@+id/userProfilePicture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/> -->

    <Button
        android:id="@+id/buttonAnswer1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewProfilePic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="buttonAnswer1" />

    <Button
        android:id="@+id/buttonAnswer2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonAnswer1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="buttonAnswer2" />

    <Button
        android:id="@+id/buttonAnswer3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonAnswer2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="buttonAnswer3" />

    <Button
        android:id="@+id/buttonAnswer4"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonAnswer3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="buttonAnswer4" />

    

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/imageViewProfilePic"
        android:layout_marginBottom="5dp"
        android:text="Score" />

    <TextView
        android:id="@+id/timeCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonAnswer4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="5" />
    <TextView
        android:id="@+id/answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeCount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Correct"
        android:textSize="16dp" />

</RelativeLayout>
